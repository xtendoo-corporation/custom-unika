<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
<!--        <report-->
<!--                id="lims.sample_received_print_report"-->
<!--                string="Muestra recivida"-->
<!--                model="stock.picking"-->
<!--                report_type="qweb-pdf"-->
