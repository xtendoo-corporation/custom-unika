<!--                    attrs="{'invisible': [('sale_warn_msg', '=', False)]}"-->
<!--                    style="margin-bottom:0px;"-->
<!--                >-->

<!--                    <div style="width:2%;float:left;">-->
<!--                        <i class="fa fa-info-circle" style="font-size:2em;"/>-->
<!--                    </div>-->
